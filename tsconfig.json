{
	"compilerOptions": {
		"allowJs": false,
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"noImplicitAny": false,
		"noLib": false,
		"noUnusedLocals": false,
		"outDir": "./dist",
		"removeComments": false,
		"rootDir": "./src",
		"sourceMap": false,
		"target": "es6"
	},
	"exclude": [
		"./node_modules",
		"./**/*.spec.ts"
	],
	"include": [
		"./src/*.ts",
		"./src/**/*.ts"
	]
}